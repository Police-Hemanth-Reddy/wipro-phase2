@page
@model CustomerApp.Pages.IndexModel
@{
    ViewData["Title"] = "Customer Management";
}

<h2>Add Customer</h2>

<form method="post">
    <label>Name:</label>
    <input type="text" asp-for="Customer.Name" required />

    <label>Address:</label>
    <input type="text" asp-for="Customer.Address" required />

    <label>Country:</label>
    <input type="text" asp-for="Customer.Country" required />

    <label>City:</label>
    <input type="text" asp-for="Customer.City" required />

    <label>Phone:</label>
    <input type="text" asp-for="Customer.Phoneno" required />

    <button type="submit" asp-page-handler="Create">Add</button>
</form>

<hr />

<h2>Customer List</h2>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Country</th>
            <th>City</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.Name</td>
                <td>@customer.Address</td>
                <td>@customer.Country</td>
                <td>@customer.City</td>
                <td>@customer.Phoneno</td>
            </tr>
        }
    </tbody>
</table>
