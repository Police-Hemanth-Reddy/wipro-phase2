@model EmployeeManagement.Models.Employee

<h2>Add Employee</h2>
<form method="post">
    <label>Name:</label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>

    <label>Date of Birth:</label>
    <input asp-for="DateOfBirth" type="date" />
    <span asp-validation-for="DateOfBirth"></span>

    <label>Date of Joining:</label>
    <input asp-for="DateOfJoining" type="date" />
    <span asp-validation-for="DateOfJoining"></span>

    <label>Salary:</label>
    <input asp-for="Salary" />
    <span asp-validation-for="Salary"></span>

    <label>Department:</label>
    <select asp-for="Dept">
        <option value="HR">HR</option>
        <option value="Accts">Accts</option>
        <option value="IT">IT</option>
    </select>
    <span asp-validation-for="Dept"></span>

    <label>Password:</label>
    <input asp-for="Password" type="password" />
    <span asp-validation-for="Password"></span>

    <button type="submit">Submit</button>
</form>
