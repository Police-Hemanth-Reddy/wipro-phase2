@model EmployeeManagement.Models.Employee

<h2>Delete Employee</h2>

<p>Are you sure you want to delete this employee?</p>

<table border="1">
    <tr>
        <th>Name</th>
        <th>DOB</th>
        <th>DOJ</th>
        <th>Salary</th>
        <th>Dept</th>
    </tr>
    <tr>
        <td>@Model.Name</td>
        <td>@Model.DateOfBirth.ToShortDateString()</td>
        <td>@Model.DateOfJoining.ToShortDateString()</td>
        <td>@Model.Salary</td>
        <td>@Model.Dept</td>
    </tr>
</table>

<form method="post">
    <button type="submit">Confirm Delete</button>
    <a href="@Url.Action("Index")">Cancel</a>
</form>
