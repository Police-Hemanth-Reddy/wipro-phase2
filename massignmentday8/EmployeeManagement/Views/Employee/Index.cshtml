@model IEnumerable<EmployeeManagement.Models.Employee>

<h2>Employee List</h2>
<a href="@Url.Action("Create")">Add New Employee</a>
<table border="1">
    <tr>
        <th>Name</th>
        <th>DOB</th>
        <th>DOJ</th>
        <th>Salary</th>
        <th>Dept</th>
        <th>Actions</th>
    </tr>
    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Name</td>
            <td>@emp.DateOfBirth.ToShortDateString()</td>
            <td>@emp.DateOfJoining.ToShortDateString()</td>
            <td>@emp.Salary</td>
            <td>@emp.Dept</td>
            <td>
                <a href="@Url.Action("Edit", new { id = emp.Id })">Edit</a> |
                <a href="@Url.Action("Delete", new { id = emp.Id })">Delete</a>
            </td>
        </tr>
    }
</table>
